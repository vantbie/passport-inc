// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:.//dev.db"  // <-- Esto le dice: "Crea un archivo llamado dev.db aquÃ­ mismo"
}

enum Role {
  USER
  ADMIN
}

model Usuarios {
  id        Int      @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String   @unique
  password  String
  role Role          @default(USER) // por defecto cualquiera que se registre es usuario
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
